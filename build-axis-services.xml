<?xml version="1.0"?>
<project name="Axis2Services" basedir=".">

	<target name="init" depends="deployinit">		 		 
		<property name="svn.root" value="https://ncisvn.nci.nih.gov/svn/geworkbench/trunk/geworkbench" />
	</target>

	<target name="deployinit">
		<property name="checkout.dir" value="." />		 
		<property environment="env" />
		<property name="tomcat.dir" value="${env.CATALINA_HOME}" />
	</target>

	<target name="install" depends="checkout, deploy" />

	<target name="checkout" depends="init">		 
		<antcall target="geworkbench" />
	</target>
	 

	<target name="geworkbench" depends="init">
		<exec executable="svn" >
		  <arg line="checkout ${svn.root}/components/anova ${checkout.dir}/anova"/>
		</exec>
		<exec executable="svn" >
		  <arg line="checkout ${svn.root}/components/aracne-java ${checkout.dir}/aracne"/>
		</exec>	
		<exec executable="svn" >		 
		  <arg line="checkout ${svn.root}/lincs-ws ${checkout.dir}/lincs-ws"/>		    
		</exec>	
		<exec executable="svn" >
		  <arg line="checkout ${svn.root}/components/ttest ${checkout.dir}/ttest"/>
		</exec>	
	</target>	 

	<target name="deploy" depends="deployinit">
		<subant target="generate.service">
			<fileset dir="${checkout.dir}"
				includes="*/build.xml" />
		</subant>	 
   </target>	 
  
</project>
